<% layout("layouts/boilerplate") %>
<div class="container-fluid mt-4 px-3 px-md-5">
  <h3 class="mb-4">My Listings</h3>

  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
    <% for (let l of userListings) { %>
      <div class="col">
        <div class="mycard position-relative">
            <img src="<%= l.image?.url %>" alt="img" class="myimg">
            <div class="mybody">
            <h6><b><%= l.title %></b></h6>
            <p class="text-muted mb-1"><%= l.location %>, <%= l.country %></p>
            <p class="fw">â‚¹ <%= l.price.toLocaleString("en-IN") %>
                <i class="tax-info"> &nbsp;+20%GST</i>
            </p>
            <!-- Buttons row -->
            <div class="d-flex justify-content-between mt-3">
                <a href="/listings/<%= l._id %>" class="btn btn-sm btn-primary">View</a>
                <a href="/listings/<%= l._id %>/edit" class="btn btn-sm btn-danger" style="width: 70px;">  Edit </a>
                <form action="/listings/<%= l._id %>?_method=DELETE" method="POST" class="d-inline"
                  onsubmit="return confirm('Are you sure you want to delete this?')">
                <button class="btn btn-sm btn-dark">Delete</button>
                </form>
            </div>
            
            </div>
        </div>
        </div>

    <% } %>
  </div>
</div>
